# Environment Variables
PORT=3000
NODE_ENV=production

# Google Drive API Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
# Use comma-separated Google Drive links instead of folder ID
GOOGLE_DRIVE_LINKS=https://drive.google.com/file/d/FILE_ID_1/view,https://drive.google.com/file/d/FILE_ID_2/view

# Instagram Credentials
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
# Set to 'true' to mock Instagram uploads for testing
MOCK_INSTAGRAM=false

# Gemini AI for Caption Generation (Optional)
GEMINI_API_KEY=your_gemini_api_key_here

# Video Processing Configuration
WATERMARK_PATH=./assets/watermark.png
MAX_RETRIES=3
RETRY_DELAY=1000
TEMP_DIR=./temp
OUTPUT_DIR=./output

# Instagram Post Configuration
DEFAULT_CAPTION=Check out this amazing video! ðŸŽ¥âœ¨ #video #content #amazing #viral #entertainment
DEFAULT_HASHTAGS=#video #content #viral #entertainment #amazing #cool #trending #fun #awesome #creative

# Cron Configuration (3 times a day: 8 AM, 2 PM, 8 PM UTC)
CRON_SCHEDULE=0 8,14,20 * * *

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
